template :base do
  use :atuin, inline_height: 16
  use :lsd, alias_ls: true
  use :bat, :fd, :fzf, :ripgrep, :starship, :zoxide
end

template :container do
  use :delta, :direnv, :gh, :git, :lazygit

  image "ghcr.io/david/habitat-ubuntu:latest"
  editor :neovim, config: "files/nvim"
  shell :fish, ls_aliases: true
end

container :"habitat-rb" do
  apply :base, :container
  use :ruby

  root "~/Projects/habitat-rb"
  # set :repository, "david/habitat-rb"
end

container :sys do
  apply :base, :container
  use :"lua-language-server", :ruby, :stylua

  root "~/Projects/sys"
end

