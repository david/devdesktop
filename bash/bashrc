# Commands that should be applied only for interactive shells.
[[ $- == *i* ]] || return

. "/etc/profiles/per-user/david/share/blesh/ble.sh"

HISTFILESIZE=100000
HISTSIZE=10000

export GPG_TTY="$(tty)"

EDITOR=nvim
VISUAL=nvim

export EDITOR VISUAL

set -o vi

shopt -s histappend
shopt -s checkwinsize
shopt -s extglob
shopt -s globstar
shopt -s checkjobs

alias ls=lsd

if [[ ! -v BASH_COMPLETION_VERSINFO ]]; then
  . "/nix/store/q0zgchbbyrnhihb8z5n2fv7ygpv0fq79-bash-completion-2.14.0/etc/profile.d/bash_completion.sh"
fi

eval "$(fzf --bash)"
eval "$(zoxide init bash)"
eval "$(starship init bash --print-full-init)"
eval "$(direnv hook bash)"
eval "$(dircolors ~/sys/dircolors)"

[[ ${BLE_VERSION-} ]] && ble-attach
